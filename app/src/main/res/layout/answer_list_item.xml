<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:id="@+id/userFace"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/answerText"
        app:layout_constraintBottom_toTopOf="@id/answerText"
        android:src="@drawable/ellipse"/>

    <TextView
        android:id="@+id/answerText"
        android:layout_width="wrap_content"
        android:maxLines="3"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/userFace"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:background="@drawable/answer_filled_background"
        android:text="Great?" />

</androidx.constraintlayout.widget.ConstraintLayout>